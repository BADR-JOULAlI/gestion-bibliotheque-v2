<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.bibliotheque.controller.MembreController">
    <top>
        <Label text="Gestion des Membres de la Bibliothèque" style="-fx-font-size: 20px; -fx-font-weight: bold;" BorderPane.alignment="CENTER">
            <padding><Insets top="10" bottom="10"/></padding>
        </Label>
    </top>

    <center>
        <TableView fx:id="tableMembres">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50" />
                <TableColumn fx:id="colNom" text="Nom" prefWidth="120" />
                <TableColumn fx:id="colPrenom" text="Prénom" prefWidth="120" />
                <TableColumn fx:id="colEmail" text="Email" prefWidth="180" />
                <TableColumn fx:id="colTelephone" text="Téléphone" prefWidth="120" />
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox spacing="10">
            <padding><Insets top="10" bottom="10" left="10" right="10"/></padding>
            <GridPane hgap="10" vgap="10">
                <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="txtNom" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Prénom:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <TextField fx:id="txtPrenom" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="txtEmail" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Téléphone:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <TextField fx:id="txtTelephone" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
            </GridPane>
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Inscrire Membre" onAction="#handleAjouter" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                <Button text="Supprimer" onAction="#handleSupprimer" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>